<h1>投稿を編集</h1>

<%= form_with(model: @status, local: true) do |f| %>
  <div class="mb-3">
    <%= f.label :content, '投稿内容', class: 'form-label' %>
    <%= f.text_area :content, class: 'form-control', rows: 4 %>
  </div>

  <div class="mb-3">
    <%= f.submit '更新する', class: 'btn btn-primary' %>
    <%= link_to '戻る', status_path(@status), class: 'btn btn-secondary' %>
  </div>
<% end %>
