<div class="card">
  <div class="card-body">
    <p class="card-text"><%= @status.content %></p>
    <div class="text-muted mb-3">
      <%= @status.created_at.strftime('%Y年%m月%d日 %H:%M') %>
    </div>
    <div class="btn-group">
      <%= link_to '編集', edit_status_path(@status), class: 'btn btn-outline-primary' %>
      <%= button_to '削除', status_path(@status), method: :delete, class: 'btn btn-outline-danger', form: { data: { turbo_confirm: '本当に削除しますか？' } } %>
      <%= link_to '戻る', root_path, class: 'btn btn-outline-secondary' %>
    </div>
  </div>
</div>
